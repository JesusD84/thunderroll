
# Database Configuration
DATABASE_URL=postgresql://thunderrol:password@db:5432/thunderrol
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=thunderrol
DATABASE_USER=thunderrol
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET_KEY=super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# App Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost", "http://frontend:3000"]

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=super-secret-nextauth-key-change-in-production

# Timezone
TZ=America/Mexico_City

# Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/app/uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
